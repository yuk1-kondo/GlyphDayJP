<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#000000">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hamon シミュレーター"
        android:textSize="24sp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/profile_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="プロファイル: 柔らかめ (λ=4.0, v=0.22, α=0.06)"
        android:textSize="16sp"
        android:textColor="#CCCCCC"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <ImageView
        android:id="@+id/matrix_view"
        android:layout_width="500dp"
        android:layout_height="500dp"
        android:layout_gravity="center"
        android:background="#1C1C1C"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/long_press_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="長押し (プロファイル切替 + 水滴追加)"
            android:layout_marginEnd="8dp"
            android:background="#4CAF50"
            android:textColor="#FFFFFF"/>

        <Button
            android:id="@+id/aod_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="AOD (1ステップ)"
            android:layout_marginStart="8dp"
            android:background="#2196F3"
            android:textColor="#FFFFFF"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="※ これはエミュレーター用のシミュレーターです。実機ではGlyph Matrixに表示されます。"
        android:textSize="12sp"
        android:textColor="#888888"
        android:gravity="center"
        android:layout_marginTop="16dp"/>

</LinearLayout>
